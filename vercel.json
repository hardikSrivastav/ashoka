{
  "version": 2,
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/health",
      "dest": "/api/index.ts"
    },
    {
      "src": "/courses",
      "dest": "/api/index.ts"
    },
    {
      "src": "/sections",
      "dest": "/api/index.ts"
    },
    {
      "src": "/faculties",
      "dest": "/api/index.ts"
    },
    {
      "src": "/recommendations",
      "dest": "/api/index.ts"
    },
    {
      "src": "/admin",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/front/$1"
    }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
