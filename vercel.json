{
  "buildCommand": "cd front && npm run build",
  "outputDirectory": "front/dist",
  "installCommand": "npm install && cd front && npm install",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/index.ts"
    },
    {
      "source": "/courses",
      "destination": "/api/index.ts"
    },
    {
      "source": "/sections",
      "destination": "/api/index.ts"
    },
    {
      "source": "/faculties",
      "destination": "/api/index.ts"
    },
    {
      "source": "/recommendations",
      "destination": "/api/index.ts"
    },
    {
      "source": "/admin",
      "destination": "/api/index.ts"
    }
  ]
}
