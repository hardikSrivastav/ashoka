[Unit]
Description=FC Tinder Application
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/ec2-user/ashoka
Environment=NODE_ENV=production
Environment=PORT=80
Environment=CSV_DIR=good-csvs
ExecStart=/usr/bin/node /home/ec2-user/ashoka/dist/index.js
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
